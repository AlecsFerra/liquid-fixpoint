// prop :: a -> b
measure prop : func(2, [@(0), @(1)])  

// relation Bin
data Bin 0 = [
  | Bin { _ : Int }
]

// data Binary
data Binary 0 = [
  | B0 { }
  | B1 { }
]

bind 0 n : {n:Int | true}
bind 1 p : {p:Binary | prop p = Bin n && prop p = Bin 0}
bind 2 p : {p:Binary | prop p = Bin n && prop p = Bin 1}

constraint:
  env [0; 1]
  lhs {v:int | true}
  rhs {v:int | n == 0 || n == 1}
  id 1 tag []

constraint:
  env [0; 2]
  lhs {v:int | true}
  rhs {v:int | n == 0 || n == 1}
